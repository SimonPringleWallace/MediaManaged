<div class="form">
  <h2 class="form-header">Edit My Profile</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="user-field">
      <%= f.label :first_name, 'First Name' %>
      <%= f.text_field :first_name %>
    </div>

    <div class="user-field">
      <%= f.label :last_name, 'Last Name' %>
      <%= f.text_field :last_name %>
    </div>

    <div class="user-field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="user-field">
      <%= f.label :profile_photo, 'Profile Photo' %>
      <% if current_user.profile_photo.url.present? %>
        <%= image_tag(current_user.profile_photo.url) %>
      <% end %>

      <%= f.file_field :profile_photo %>
      <%= f.hidden_field :profile_photo_cache %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="user-field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <i>Must be at least <%= @minimum_password_length %> characters </i>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", placeholder: "leave blank unless changing password" %>
    </div>

    <div class="user-field">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "leave blank unless changing password" %>
    </div>

    <div class="user-field">
      <%= f.label :current_password %> <i>Please provide your current password to confirm these changes</i>
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>

    <div class="actions">
      <%= f.submit "Save Changes" %>
    </div>
  <% end %>

  <br>

  <h2 class="form-header">Cancel My Account</h2>

  <p class="goodbye">So long, and thanks for all the flicks</p>
  <%= button_to "Cancel My Account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
</div>
